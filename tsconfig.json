{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "ES2020",
    "noEmit": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "lib", "build", "dist", "**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "playwright", "playwright-ct.config.ts"]
}
